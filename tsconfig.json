{
  "include": ["**/*"],
  "compilerOptions": {
    "jsx": "react-jsx", // Or "react" depending on your setup
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "allowImportingTsExtensions":true,
    "target": "ES2015",
    "lib": [ "es2015", "dom" ]
  }
}
